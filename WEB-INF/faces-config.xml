<?xml version="1.0" encoding="UTF-8"?>

<faces-config
	xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
version="1.2">

	<component>
		<component-type>ListArticlesBlock</component-type>
		<component-class>com.idega.block.article.component.ListArticlesBlock</component-class>
	</component>

	<component>
		<component-type>ArticleItemView</component-type>
		<component-class>com.idega.block.article.component.ArticleItemViewer</component-class>
		<property>
			<display-name>Item Resource Path</display-name>
			<property-name>resourcePath</property-name>
			<property-class>java.lang.String</property-class>
		</property>
		<property>
			<display-name>Details Viewer Page (Path)</display-name>
			<property-name>detailsViewerPath</property-name>
			<property-class>java.lang.String</property-class>
		</property>
		<property>
			<display-name>Style Class</display-name>
			<property-name>styleClass</property-name>
			<property-class>java.lang.String</property-class>
		</property>
		<property>
			<display-name>Display headline as a link</display-name>
			<property-name>headlineAsLink</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Date pattern</display-name>
			<property-name>datePattern</property-name>
			<property-class>java.lang.String</property-class>
		</property>
		<property>
			<display-name>Show author</display-name>
			<property-name>showAuthor</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Show creation date</display-name>
			<property-name>showCreationDate</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Show headline</display-name>
			<property-name>showHeadline</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Show teaser</display-name>
			<property-name>showTeaser</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Show body</display-name>
			<property-name>showBody</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Show details command</display-name>
			<property-name>showDetailsCommand</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Show date</display-name>
			<property-name>showDate</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Show time</display-name>
			<property-name>showTime</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Show comments</display-name>
			<property-name>showComments</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Set article identifier</display-name>
			<property-name>articleItemViewerFilter</property-name>
			<property-class>java.lang.String</property-class>
		</property>
		<component-extension>
			<idegaweb-info>
				<builder-visible>true</builder-visible>
				<object-type>jsf.uicomponent</object-type>
			</idegaweb-info>
		</component-extension>
	</component>
	<component>
		<component-type>ArticleSearch</component-type>
		<component-class>com.idega.block.article.component.SearchArticleBlock</component-class>
	</component>

	<component>
		<component-type>ArticleListViewer</component-type>
		<component-class>com.idega.block.article.component.ArticleListViewer</component-class>
		<property>
			<display-name>Base Folder Path</display-name>
			<property-name>baseFolderPath</property-name>
			<property-class>java.lang.String</property-class>
		</property>
		<property>
			<display-name>Categories</display-name>
			<property-name>categories</property-name>
			<property-class>java.lang.String</property-class>
		</property>
		<property>
			<display-name>Show author</display-name>
			<property-name>showAuthor</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Show creation date</display-name>
			<property-name>showCreationDate</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Show headline</display-name>
			<property-name>showHeadline</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Show teaser</display-name>
			<property-name>showTeaser</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Show body</display-name>
			<property-name>showBody</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Show details command</display-name>
			<property-name>showDetailsCommand</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Max number of displayed articles</display-name>
			<property-name>maxNumberOfDisplayed</property-name>
			<property-class>int</property-class>
		</property>
		<property>
			<display-name>Display headline as a link</display-name>
			<property-name>headlineAsLink</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Date pattern</display-name>
			<property-name>datePattern</property-name>
			<property-class>java.lang.String</property-class>
		</property>
		<property>
			<display-name>Show comments</display-name>
			<property-name>showComments</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>URI to details viewer page</display-name>
			<property-name>detailsViewerPath</property-name>
			<property-class>java.lang.String</property-class>
		</property>
		<property>
			<display-name>Show date</display-name>
			<property-name>showDate</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Show time</display-name>
			<property-name>showTime</property-name>
			<property-class>boolean</property-class>
		</property>
		<property>
			<display-name>Set identifier for articles to show</display-name>
			<property-name>articleItemViewerFilter</property-name>
			<property-class>java.lang.String</property-class>
		</property>
		<property>
			<display-name>Show all articles despite categories</display-name>
			<property-name>showAllItems</property-name>
			<property-class>boolean</property-class>
		</property>
		<component-extension>
			<idegaweb-info>
				<builder-visible>true</builder-visible>
				<object-type>jsf.uicomponent</object-type>
			</idegaweb-info>
		</component-extension>
	</component>

	<component>
		<component-type>ArticleAdminBlock</component-type>
		<component-class>com.idega.block.article.component.ArticleAdminBlock</component-class>
	</component>

	<managed-bean>
		<managed-bean-name>articleItemBean</managed-bean-name>
		<managed-bean-class>com.idega.block.article.bean.ArticleItemBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>articleVersionItemBean</managed-bean-name>
		<managed-bean-class>com.idega.block.article.bean.ArticleItemBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>previewArticleBean</managed-bean-name>
		<managed-bean-class>com.idega.block.article.bean.ArticleItemBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>articleVersionListBean</managed-bean-name>
		<managed-bean-class>com.idega.block.article.bean.ArticleVersionListBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>searchArticleBean</managed-bean-name>
		<managed-bean-class>com.idega.block.article.bean.SearchArticleBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
	
	<managed-bean>
		<managed-bean-name>articleItemListBean</managed-bean-name>
		<managed-bean-class>com.idega.block.article.bean.ArticleListManagedBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
	<component>
		<component-type>editArticlesList</component-type>
		<component-class>com.idega.block.article.component.article_view.EditArticlesList</component-class>
		<property>
			<display-name>Articles</display-name>
			<property-name>articles</property-name>
			<property-class>java.util.List</property-class>
		</property>
	</component>
	
</faces-config>